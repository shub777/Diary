<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="@drawable/background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubhambhama.dairy.MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="MyWishList"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="23sp"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/titleEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:alpha="0.5"
        android:textColor="#000000"
        android:hint="Enter title"

        />

    <EditText
        android:id="@+id/wishEditText"
        android:hint="Enter the wish......"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:alpha="0.5"
        android:textColor="#000000"
        android:layout_width="250dp"
        android:layout_height="150dp"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_marginTop="80dp"
        android:layout_below="@id/wishEditText"
        android:text="submit"
        android:alpha="0.7"
        android:layout_alignLeft="@+id/wishEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/listall"
        android:layout_marginTop="80dp"
        android:layout_below="@id/wishEditText"
        android:text="ListAll"
        android:alpha="0.7"
        android:layout_alignRight="@+id/wishEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</RelativeLayout>
